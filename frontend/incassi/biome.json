{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false,
    "defaultBranch": "main"
  },
  "files": {
    "ignoreUnknown": false,
    "ignore": [
      "package.json",
      "*-lock.json",
      "dist",
      "src/assets/**",
      "tsconfig.*",
      "karma.conf.js",
      ".angular/",
      "node_modules/",
      "src/environments/",
      "coverage/"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 120
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "quoteStyle": "single",
      "lineWidth": 120,
      "bracketSpacing": false,
      "lineEnding": "lf",
      "semicolons": "asNeeded",
      "indentWidth": 2,
      "trailingCommas": "es5"
    }
  },
  "json": {
    "formatter": {
      "enabled": true,
      "indentWidth": 2,
      "lineEnding": "lf",
      "trailingCommas": "none"
    }
  }
}
